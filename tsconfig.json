{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "strict": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "outDir": "./built",
    "baseUrl": ".",
    "paths": {},
    "rootDir": "./src",
    "allowJs": false,
    "typeRoots": [
      "node_modules/@types",
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": [
      "node"
    ],
    "keyofStringsOnly": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "build",
  ]
}